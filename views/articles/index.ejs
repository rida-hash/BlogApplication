<%- include("partials/header"); -%>
<body>
  <div class="container">
    <!-- <h1 class="mb-4">Get Started, Get Writing!</h1> -->

    <% articles.forEach(article => { %>
      <div class="card mt-20">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2">
            <%= article.description %>
          <a href="articles/<%= article.slug %>" style="color: blue;">Read More</a>
          </div>
          <div>
            <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline" style="display:inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</body>
<%- include("partials/footer"); -%>